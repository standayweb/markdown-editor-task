{
  "presets": [
    "react",
    [
      "env",
      {
        "targets": {
          "browsers": "last 2 versions, ie 10"
        },
        "loose": true,
        "modules": false
      }
    ]
  ],
  "plugins": [
    "react-hot-loader/babel",
    "babel-plugin-transform-class-properties",
    ["transform-react-jsx", { "pragma": "Glamor.createElement" }]
  ]
}
